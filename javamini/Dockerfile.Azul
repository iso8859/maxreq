# Dockerfile for Java with Azul Zulu
# Build stage with Maven
FROM maven:3.9-eclipse-temurin-17 AS builder
WORKDIR /app
COPY pom.xml .
COPY src ./src
RUN mvn clean package -DskipTests

# Runtime stage with Azul Zulu
FROM azul/zulu-openjdk:17
WORKDIR /app
COPY --from=builder /app/target/javamini-*.jar app.jar

EXPOSE 8080
CMD ["java", "-jar", "app.jar"]
