# Dockerfile for Java with Eclipse OpenJ9
# Build stage with Maven
FROM maven:3.9-eclipse-temurin-17 AS builder
WORKDIR /app
COPY pom.xml .
COPY src ./src
RUN mvn clean package -DskipTests

# Runtime stage with OpenJ9 Java 17
FROM ibm-semeru-runtimes:open-17-jre
WORKDIR /app
COPY --from=builder /app/target/javamini-*.jar app.jar

EXPOSE 8080
CMD ["java", "-jar", "app.jar"]
